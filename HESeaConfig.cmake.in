# - Config file for the HESea package
# It defines the following variables
#  HESEA_INCLUDE_DIRS - include directories for HESea
#  HESEA_LIBRARIES    - libraries to link against

get_filename_component(HESEA_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT HESea_BINARY_DIR)
  include("${HESEA_CMAKE_DIR}/HESeaTargets.cmake")
endif()

# These are IMPORTED targets created by HESeaTargets.cmake
set(HESEA_INCLUDE "@INSTALL_INCLUDE_DIR@")
set(HESEA_LIBDIR "@INSTALL_LIB_DIR@")
set(HESEA_LIBRARIES @HESEA_PACKAGE_LIBS@ @THIRDPARTYLIBS@ @OpenMP_CXX_FLAGS@)
set(HESEA_STATIC_LIBRARIES @HESEA_STATIC_LIBS@ @THIRDPARTYLIBS@ @OpenMP_CXX_FLAGS@)
set(HESEA_SHARED_LIBRARIES @HESEA_SHARED_LIBS@ @THIRDPARTYLIBS@ @OpenMP_CXX_FLAGS@)
set(BASE_HESEA_VERSION @HESEA_VERSION@)


set(OPENMP_INCLUDES "@OPENMP_INCLUDES@" )
set(OPENMP_LIBRARIES "@OPENMP_LIBRARIES@" )

set(HESEA_CXX_FLAGS "@CMAKE_CXX_FLAGS@ @OpenMP_CXX_FLAGS@")
set(HESEA_C_FLAGS "@CMAKE_C_FLAGS@ @OpenMP_C_FLAGS@")

if( "@WITH_NTL@" STREQUAL "Y" )
	set(HESEA_CXX_FLAGS "${HESEA_CXX_FLAGS} -DWITH_NTL" )
	set(HESEA_C_FLAGS "${HESEA_C_FLAGS} -DWITH_NTL")
endif()

set (HESEA_EXE_LINKER_FLAGS "@CMAKE_EXE_LINKER_FLAGS@ @OpenMP_EXE_LINKER_FLAGS@")

# CXX info
set(HESEA_CXX_STANDARD "@CMAKE_CXX_STANDARD@")
set(HESEA_CXX_COMPILER_ID "@CMAKE_CXX_COMPILER_ID@")
set(HESEA_CXX_COMPILER_VERSION "@CMAKE_CXX_COMPILER_VERSION@")

# Build Options
set(HESEA_STATIC "@BUILD_STATIC@")
set(HESEA_SHARED "@BUILD_SHARED@")
set(HESEA_TCM "@WITH_TCM@")
set(HESEA_WITH_INTEL_HEXL "@WITH_INTEL_HEXL@")
set(HESEA_OPENMP "@WITH_OPENMP@")
set(HESEA_NATIVE_SIZE "@NATIVE_SIZE@")
set(HESEA_CKKS_M_FACTOR "@CKKS_M_FACTOR@")
set(HESEA_NATIVEOPT "@WITH_NATIVEOPT@")

# Math Backend
if("@WITH_BE2@")
	set(HESEA_BACKEND "BE2")
elseif("@WITH_BE4@")
	set(HESEA_BACKEND "BE4")
elseif("@WITH_NTL@")
	set(HESEA_BACKEND "NTL")
endif()

# Build Details
set(HESEA_EMSCRIPTEN "@EMSCRIPTEN@")
set(HESEA_ARCHITECTURE "@ARCHITECTURE@")
set(HESEA_BACKEND_FLAGS_BASE "@HESEA_BACKEND_FLAGS@")

# Compile Definitions

if( "@BUILD_SHARED@" )
	set(HESEA_BINFHE_COMPILE_DEFINITIONS "@_pal_binfhe_compile_defs@")
	set(HESEA_CORE_COMPILE_DEFINITIONS "@_pal_core_compile_defs@")
	set(HESEA_PKE_COMPILE_DEFINITIONS "@_pal_pke_compile_defs@")
	set(HESEA_COMPILE_DEFINITIONS
			${HESEA_BINFHE_COMPILE_DEFINITIONS}
			${HESEA_CORE_COMPILE_DEFINITIONS}
			${HESEA_PKE_COMPILE_DEFINITIONS})
endif()

if( "@BUILD_STATIC@" )
	set(HESEA_BINFHE_COMPILE_DEFINITIONS_STATIC "@_pal_binfhe_compile_defs_static@")
	set(HESEA_CORE_COMPILE_DEFINITIONS_STATIC "@_pal_core_compile_defs_static@")
	set(HESEA_PKE_COMPILE_DEFINITIONS_STATIC "@_pal_pke_compile_defs_static@")
	set(HESEA_COMPILE_DEFINITIONS_STATIC
			${HESEA_BINFHE_COMPILE_DEFINITIONS_STATIC}
			${HESEA_CORE_COMPILE_DEFINITIONS_STATIC}
			${HESEA_PKE_COMPILE_DEFINITIONS_STATIC})
endif()
